<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven"
        android:onClick="onButtonClick"
        android:height="80dp"
        android:width="80dp"
        android:layout_below="@+id/txtBoxResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eight"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/seven"
        android:layout_toRightOf="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nine"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four"
        android:onClick="onButtonClick"
        android:layout_below="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/four"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/four"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:onClick="onButtonClick"
        android:layout_below="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zero"
        android:onClick="onButtonClick"
        android:layout_below="@+id/one"
        android:layout_alignRight="@+id/two"
        android:layout_alignEnd="@+id/two"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/btnDot"
        android:onClick="onButtonClick"
        android:layout_below="@+id/three"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnMinus"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnEqual"
        android:onClick="onButtonClick"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:height="80dp"
        android:width="80dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plus"
        android:onClick="onButtonClick"
        android:height="80dp"
        android:width="80dp"
        android:layout_above="@+id/btnMinus"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear"
        android:onClick="onButtonClick"
        android:height="80dp"
        android:width="80dp"
        android:layout_alignTop="@+id/nine"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtBoxResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:autoText="false"
        android:elegantTextHeight="true"
        android:gravity="bottom|left|top"
        android:height="@dimen/abc_action_bar_stacked_max_height"
        android:backgroundTint="@color/accent_material_dark"
        android:maxHeight="100dp"
        android:singleLine="false"
        android:background="@color/button_material_dark"
        android:focusableInTouchMode="false"
        android:shadowColor="@color/accent_material_light" />
</RelativeLayout>
